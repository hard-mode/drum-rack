mixin SamplePad(number)
  .pad.empty(data-number=number)
    .pad-play
      .pad-play-icon ▶
      .pad-load-icon ☺
    .pad-load Load sample
    .pad-controls
      .pad-edit Edit
      .pad-mute M
      .pad-solo S

mixin SampleRack(padCount)
  //-.overview
  .rack
    .pads
      - var pad = 0
      while pad < padCount
        - pad++
        +SamplePad(pad)
    +SampleEditor

mixin SamplePicker(t, l, w, h)
  - var left  = Math.max(3, l - 60) + 'px'
  - var width = (w + 120)           + 'px'
  - var top   = (t + h + 6)         + 'px'
  - var style = 'left:'+left+';top:'+top+';width:'+width
  .modal(style=style+';opacity:1')
    input(style='width:100%',placeholder='search...')
    .search-results

