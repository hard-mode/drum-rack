doctype html

- var PAD_COUNT = 16

mixin sample-pad
  .pad.empty
    .pad-play
      .pad-play-icon ▶
      .pad-load-icon ☺
    .pad-load Load sample
    .pad-controls
      .pad-edit Edit
      .pad-mute M
      .pad-solo S

mixin sample-editor
  .editor
    .editor-waveform
    .editor-controls
      .editor-section
        .editor-section-title Info
        .editor-field Path
        .editor-field Format
        .editor-section-title Playback
        .editor-field Start
        .editor-field End
        .editor-field Loop
      .editor-section
        .editor-section-title Pitch
        .editor-field Semi
        .editor-field Cent
        .editor-section-title Filter
        .editor-field HP
        .editor-field LP
      .editor-section
        .editor-section-title Output
        .editor-field Pan
        .editor-field Volume
        .editor-field Mute
        .editor-field Solo

mixin sample-rack
  //-.overview
  .pads
    - var pad = 0
    while pad < PAD_COUNT
      - pad++
      +sample-pad
  +sample-editor

